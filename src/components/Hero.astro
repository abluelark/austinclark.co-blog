---
import { marked } from 'marked';
import Button from './Button.astro';
import siteConfig from '../data/site-config';

const hero = siteConfig.hero;
---

{
    (hero?.title || hero?.image?.src || hero?.text || hero?.texted || (hero?.actions && hero.actions.length > 0)) && (
        <section class="w-full flex flex-col gap-8 mb-14 sm:mb-10">
            {hero.title && <h1 class="text-2xl leading-tight font-sans font-bold sm:text-3xl sm:leading-tight">{hero.title}</h1>}
            {/* hero.image?.src && (
                <figure>
                    <img class="w-full" src={hero.image.src} loading="lazy" decoding="async" alt={hero.image.alt || ''} />
                    {hero.image.caption && <figcaption class="mt-1.5 text-xs sm:text-sm">{hero.image.caption}</figcaption>}
                </figure>
            ) */}
            {hero.text && <div class="max-w-none -mt-4 prose prose-dante sm:prose-lg" set:html={marked.parse(hero.text)} />}
            {hero.texted && <div class="max-w-none font-bold mt-4 prose prose-dante sm:prose-lg" set:html={marked.parse(hero.texted)} />}
            {hero.actions && hero.actions.length > 0 && (
                <div class="flex flex-wrap -mt-4 gap-4">
                    {hero.actions.map((action) => (
                        <Button href={action.href}>{action.text}</Button>
                    ))}
                </div>
            )}
            <hr />
        </section>
    )
}
